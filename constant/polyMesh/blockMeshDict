FoamFile {
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}

convertToMeters 1000; // effective units are km

// effectively 2D in x-z plane, 300x25km
vertices (
    (-50 -50 0)  // 0
    ( 50 -50 0)  // 1
    ( 50  50 0)  // 2
    (-50  50 0)  // 3
    (-50 -50 30) // 4
    ( 50 -50 30) // 5
    ( 50  50 30) // 6
    (-50  50 30) // 7
);

blocks (
	hex (0 1 2 3 4 5 6 7)
	    (100 100 30)
	    simpleGrading (1 1 1)
);

boundary (
	inlet {
		type inlet;
		faces (
			(0 3 7 4)
		);
	}

	outlet {
		type outlet;
		faces (
			(1 2 6 5)
		);
	}

	ground {
		type wall;
		faces (
			(0 1 2 3)
		);	
	}

	top {
		type wall;
		faces (
			(4 5 6 7)
		);
	}

	front {
		type wall;
		faces (
			(0 1 5 4)
        );
    }

    back {
		type wall;
		faces (
			(3 2 6 7)
		);
	}
);
